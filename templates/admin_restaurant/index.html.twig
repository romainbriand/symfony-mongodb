{% extends "admin.html.twig" %}

{% block title %}
    Liste des restaurants{{ parent() }}
{% endblock %}

{% block content %}
    <h1 class="mt-5 mb-3">Liste des restaurants</h1>
    <a href="{{ path('admin_restaurant_add') }}" class="float-right text-right mb-4">Ajouter un restaurant</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.name }}</td>
                <td>
                    <a href="{{ path('admin_restaurant_edit', {restaurant: restaurant.id}) }}">Editer</a> |
                    <a href="{{ path('admin_restaurant_delete', {restaurant: restaurant.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item{% if(hasPrev == false) %} disabled{% endif %}">
                <a class="page-link" href="{{ path('admin_restaurant', {page: page-1}) }}">PrÃ©cÃ©dent</a>
            </li>
            <li class="page-item{% if(hasNext == false) %} disabled{% endif %}">
                <a class="page-link" href="{{ path('admin_restaurant', {page: page+1}) }}">Suivant</a>
            </li>
        </ul>
    </nav>
{% endblock %}